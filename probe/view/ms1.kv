<_Button@Button>:
    background_color: .5, .9, 1, .9
<AppScreenManager>:
    Screen:
        name: 'HomeScreen'
        RelativeLayout:
            canvas.before:
                Color:
                    rgba: 0, 1, 1, .5
            canvas:
                Rectangle:
                    pos: self.pos
                    size: self.size
            FloatLayout:
                pos_hint: {'x': 0, 'top': 1}
                size_hint: 1, .1
                Label:
                    text: 'Мото Сервис Виталия'
                    halign: 'center'
                    font_size: 30
                    size_hint: 1, .02
                    pos_hint: {'x': 0, 'top': .5}
            BoxLayout:
                canvas.before:
                    Color:
                        rgba: .7, 1, 1, .7
                canvas:
                    Rectangle:
                        pos: self.pos
                        size: self.size
                        source: 'Harley Davidson.jpeg'
                size_hint: .9, .6
                pos_hint: {'x': .05, 'top': .9}
            _Button:
                pos_hint: {'x': 0, 'y': 0}
                size_hint: 1, 0.09
                text: 'Войти >>'
                on_press:
                    root.transition.direction = 'left'
                    root.current = 'Clients'
            _Button:
                pos_hint: {'x': 10, 'y': 0}
                size_hint: 1, 0.09
                text: 'Go >>'
                on_press:
                    root.transition.direction = 'left'
                    root.current = 'MotoBase'
    Screen:
        name: 'Clients'
        FloatLayout:
            id: input_area
            canvas.before:
                Color:
                    rgba: 0, 1, 1, .5
            canvas:
                Rectangle:
                    pos: self.pos
                    size: self.size
            FloatLayout:
                pos_hint: {'x': 0, 'top': 1}
                size_hint: 1, .1
                Label:
                    text: 'Мото Сервис Виталия'
                    halign: 'center'
                    font_size: 30
                    size_hint: 1, .02
                    pos_hint: {'x': 0, 'top': .5}
            BoxLayout:
                canvas.before:
                    Color:
                        rgba: .5, 1, .8, .7
                canvas:
                    Rectangle:
                        pos: self.pos
                        size: self.size
                size_hint: .9, .7
                pos_hint: {'x': .05, 'top': .8}
                GridLayout:
                    id: add_item
                    cols: 2
                    row_default_height: 40
                    row_force_default: True
                    padding: 14
                    spacing: 14
                    pos_hint: {'x': 0, 'y': -0.25}
                    Label:
                        text: 'Клиент: '
                        font_size: 25
                    Label:
                        text: 'Мотоцикл: '
                        font_size: 25
                    _Button:
                        text: 'Добавить клиента'
                        font_size: 20
                        on_press: root.open_client_form(root)
                    FloatLayout:
                        Spinner:
                            id: base_motorcycles
                            text: 'Выбрать'
                            values: ['Select']
                            size_hint: (None, None)
                            size: (180, 35)
                            pos_hint: {'x': 0, 'center_y': .5}
                            background_color: .5, .9, 1, .9
                    _Button:
                        text: 'Добавить мотоцикл'
                        font_size: 20
                        on_press: root.open_motorcycle_form(root)
            _Button:
                pos_hint: {'x': 0, 'y': 0}
                size_hint: 1, 0.09
                text: '<< Вернуться'
                on_press:
                    root.transition.direction = 'right'
                    root.current = 'HomeScreen'
            _Button:
                pos_hint: {'x': 5, 'y': 3}
                size_hint: 1, 0.09
                text: '<< ffff'
                on_press:
                    root.transition.direction = 'left'
                    root.current = 'ManageItems'
        Screen:
            name: 'MotoBase'
            FloatLayout:
                id: input_area
                canvas.before:
                    Color:
                        rgba: 0, 1, 1, .5
                canvas:
                    Rectangle:
                        pos: self.pos
                        size: self.size
                FloatLayout:
                    pos_hint: {'x': 0, 'top': 1}
                    size_hint: 1, .1
                    Label:
                        text: 'Мото Сервис Виталия'
                        halign: 'center'
                        font_size: 30
                        size_hint: 1, .02
                        pos_hint: {'x': 0, 'top': .5}